---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const proyectos = await getCollection('proyectos');
---

<Layout title="Bienvenidos a mi Portfolio">
    <section aria-label = "Proyectos en python, sql, PowerBI y mÃ¡s..">
      <div class= "px-4 pt-16 w-full mx-auto container sm:max-w-xl md:max-w-2xl lg:max-w-5xl">
        <div class="grid gap-6 md:grid-cols-3 items-stretch auto-rows-fr">
          {
            proyectos.map(proyecto => {
              const { slug, data } = proyecto
              const { title, img, description} = data

              return (
                <article class="flex flex-col bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                  <a href={`/libro/${slug}`} class="flex flex-col">
                    <div class="w-full h-48 overflow-hidden flex items-center justify-center rounded-tl-xl rounded-tr-xl">
                      <img
                        class="object-cover object-top  transform transition-transform duration-500 hover:scale-110"
                        src={`/${img}`}
                        alt={title}
                      />
                    </div>
                  </a>

                  <div class="flex flex-col flex-grow m-3">
                    <h2 transition:name={`title-${slug}`} class="text-xl font-bold tracking-tight text-center  text-gray-900 dark:text-white">
                      {title}
                    </h2>
                    <p class="m-2 text-pretty text-gray-700 dark:text-gray-400">{description}</p>
                    <div class="flex justify-center mt-auto">
                      <a
                        href="/portfolio"
                        class="inline-flex items-center py-2 px-4 ms-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
                      >
                        Ir al proyecto
                        <svg
                          class="w-3 h-3 ms-2 rtl:rotate-180"
                          aria-hidden="true"
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 14 10"
                        >
                          <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                        </svg>
                      </a>
                    </div>
                  </div>
                </article>
              )
            })
          }

        </div>
      </div>
    </section>
</Layout>
