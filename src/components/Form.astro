---
const formspreeId = import.meta.env.FORMSPREE_ID;
//"https://unsplash.com/es/fotos/persona-sosteniendo-un-telefono-inteligente-android-blanco-con-camisa-blanca-q8U1YgBaRQk?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash"

---

  <div class="w-full mx-auto sm:max-w-xl md:max-w-2xl lg:max-w-7xl">
    <div class="grid lg:grid-cols-2 grid-cols-1 gap-x-2">
      <div
        class="flex items-center justify-center bg-cover bg-no-repeat bg-[url('https://images.unsplash.com/photo-1512428559087-560fa5ceab42?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')]"
      >
          <div class="lg:w-72 w-auto h-auto bg-white dark:bg-gray-800 shadow-xl rounded-xl m-4">
            <h3 class="flex items-center gap-x-3 p-4 text-md text-gray-500 dark:text-gray-400">
              <i class="fa-solid fa-user"></i>Ingeniero Industrial
            </h3>
            <h3 class="flex items-center gap-x-3 p-4 text-md text-gray-500 dark:text-gray-400">
              <i class="fa-solid fa-envelope-circle-check"></i>coalva.94@gmail.com
            </h3>
            <h3 class="flex items-center gap-x-3 p-4 text-md text-gray-500 dark:text-gray-400">
              <i class="fa-solid fa-location-dot"></i>Lima - Perú
            </h3>
            <hr class="border-t border-gray-200 my-1" />
            <ul class="flex flex-row items-center justify-around font-normal my-1 md:flex-wrap text-md md:space-x-8 p-2 dark:text-gray-400">
                <a href="https://github.com/coalva94" class="text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-50">
                  <i class="fa-brands fa-github "></i>
                </a>
                <a href="https://www.linkedin.com/in/coalva/" class="text-gray-500 dark:text-gray-4300 hover:text-gray-800 dark:hover:text-gray-50">
                  <i class="fa-brands fa-linkedin"></i>
                </a>
                <a href="https://www.tiktok.com/@alvabits" class="text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-50">
                  <i class="fa-brands fa-tiktok"></i>
                </a>
              </ul>
          </div>
      </div>

        <div class="m-2">
          <h3
            class="text-gray-500 dark:text-gray-200 text-3xl font-semibold mb-4 lg:text-left text-center"
          >
            Envíanos un mensaje
          </h3>

          <form action={`https://formspree.io/f/${formspreeId}`}
            method="POST">
          <label>
            <input
              type="email"
              name="email"
              class="w-full h-12 shadow-sm text-gray-600 dark:text-gray-200 placeholder-gray-500 placeholder-opacity-50 text-lg font-normal leading-7 rounded-xl border border-gray-200 dark:bg-inherit focus:outline-none px-4 mb-4"
              placeholder="Email"
            />
          </label>
          <label>
            <textarea
              name="message"
              class="w-full h-48 shadow-sm resize-none text-gray-600 dark:text-gray-200 placeholder-gray-500 placeholder-opacity-50 text-lg font-normal leading-7 rounded-xl border border-gray-200 dark:bg-inherit  focus:outline-none px-4 mb-4"
              placeholder="Mensaje"></textarea>
          </label>
            <button
              type="submit"
              class="w-full h-12 text-center rounded-xl font-semibold text-gray-500 hover:text-gray-900 border border-gray-500 hover:border-gray-900 dark:text-gray-300 dark:border-gray-300 hover:dark:border-gray-50 hover:dark:text-gray-50"
              >Submit</button
            >
          </form>
        </div>

    </div>
  </div>
